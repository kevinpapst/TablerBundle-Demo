{% extends 'layout.html.twig' %}

{% block page_title %} Horizontal Form {% endblock %}
{% block page_subtitle %} Fullscreen width form {% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-md-12">
            {% embed '@Tabler/embeds/card.html.twig' %}
                {% form_theme form '@Tabler/layout/form-theme-horizontal.html.twig' %}
                {% block box_before %}{{ form_start(form) }}{% endblock %}
                {% block box_title %}{{ 'A horizontal form demo'|trans }}{% endblock %}
                {% block box_body %}
                    <p>
                    Using the horizontal form theme:
                    <pre>{% verbatim %}{% form_theme form '@Tabler/layout/form-theme-horizontal.html.twig' %}{% endverbatim %}</pre>
                    </p>
                    <hr>
                    {{ form_widget(form) }}
                {% endblock %}
                {% block box_footer %}
                    <div class="pull-right">
                        <button type="reset" class="btn btn-warning "><i class="fa fa-times"></i> {{ 'Cancel'|trans }}</button>
                        <button type="submit" class="btn btn-primary "><i class="fa fa-check-square"></i> {{ 'Submit'|trans }}</button>
                    </div>
                {% endblock %}

                {% block box_after %}{{ form_end(form)}}{% endblock %}
            {% endembed %}
        </div>
        <div class="col-md-6">
            {% block form_sidebar %}{% endblock %}
        </div>
    </div>
{% endblock %}
