{
    "name": "kevinpapst/tabler-bundle-demo",
    "license": "MIT",
    "type": "project",
    "description": "Demo application to showcase the Tabler Bundle",
    "require": {
        "php": "^8.0",
        "composer/package-versions-deprecated": "^1.11.99",
        "erusev/parsedown": "^1.7",
        "kevinpapst/tabler-bundle": "dev-feature/wizard",
        "knplabs/knp-menu-bundle": "^3.0",
        "sensio/framework-extra-bundle": "^6.0",
        "symfony/asset": "^5.0",
        "symfony/console": "^5.0",
        "symfony/dotenv": "^5.0",
        "symfony/flex": "^1.0",
        "symfony/form": "^5.0",
        "symfony/framework-bundle": "^5.0",
        "symfony/intl": "^5.0",
        "symfony/runtime": "5.*",
        "symfony/security-bundle": "^5.0",
        "symfony/stopwatch": "^5.0",
        "symfony/translation": "^5.0",
        "symfony/twig-bundle": "^5.0",
        "symfony/validator": "5.*",
        "symfony/webpack-encore-bundle": "^1.9",
        "symfony/yaml": "^5.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.2",
        "symfony/debug-bundle": "^5.0",
        "symfony/web-profiler-bundle": "^5.0"
    },
    "config": {
        "platform": {
            "php": "8.0"
        },
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "linting": [
            "bin/console lint:yaml config --parse-tags",
            "bin/console lint:twig templates --show-deprecations",
            "bin/console lint:xliff translations"
        ],
        "phpstan": [
            "vendor/bin/phpstan analyse src/ --level=5"
        ],
        "codestyle": "vendor/bin/php-cs-fixer fix --dry-run --verbose --show-progress=none",
        "codestyle-fix": "vendor/bin/php-cs-fixer fix"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.4.*"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/TeamAllsoftware/TablerBundle.git"
        }
    ]
}
